<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shape"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#008000"
    tools:context="nivek.learnnumbersmore.ShapeActivity">

    <Button
        android:text=""
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/triangleButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/triangle"/>

    <Button
        android:text=""
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/squareButton"
        android:background="@drawable/square"/>

    <Button
        android:text=""
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/squareButton"
        android:layout_toEndOf="@+id/squareButton"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:background="@drawable/rectangle"
        android:id="@+id/rectangleButton" />

    <Button
        android:text=""
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/triangleButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="86dp"
        android:background="@drawable/circle"
        android:id="@+id/circleButton" />

    <Button
        android:text=""
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/hexagonButton"
        android:layout_alignLeft="@+id/rectangleButton"
        android:layout_alignStart="@+id/rectangleButton"
        android:id="@+id/pentagonButton"
        android:background="@drawable/pentagon"/>

    <Button
        android:text=""
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/hexagonButton"
        android:background="@drawable/hexagon"
        android:layout_alignTop="@+id/circleButton"
        android:layout_alignLeft="@+id/squareButton"
        android:layout_alignStart="@+id/squareButton" />
</RelativeLayout>
