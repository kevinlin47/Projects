<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_number"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nivek.learnnumbersmore.NumberActivity"
    android:background="@android:color/holo_blue_bright">

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oneButton"
        android:background="@drawable/round_button"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"/>

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/twoButton"
        android:background="@drawable/round_button"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fourButton"
        android:layout_alignRight="@+id/twoButton"
        android:layout_alignEnd="@+id/twoButton"
        android:id="@+id/fiveButton"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:background="@drawable/round_button"/>

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fiveButton"
        android:layout_alignRight="@+id/threeButton"
        android:layout_alignEnd="@+id/threeButton"
        android:id="@+id/sixButton"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:background="@drawable/round_button"/>

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:id="@+id/threeButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:background="@drawable/round_button"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:id="@+id/fourButton"
        android:layout_below="@+id/oneButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fourButton"
        android:layout_alignRight="@+id/fourButton"
        android:layout_alignEnd="@+id/fourButton"
        android:layout_marginTop="30dp"
        android:id="@+id/sevenButton"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:background="@drawable/round_button"/>

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sevenButton"
        android:layout_alignRight="@+id/fiveButton"
        android:layout_alignEnd="@+id/fiveButton"
        android:id="@+id/eightButton"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:background="@drawable/round_button"/>

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sevenButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/nineButton"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:background="@drawable/round_button"/>

    <Button
        android:text="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eightButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:id="@+id/tenButton"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:background="@drawable/round_button"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/newnumberone"
        android:id="@+id/imageOne"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/newnumbertwo"
        android:id="@+id/imageTwo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/newnumberthree"
        android:id="@+id/imageThree"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/newnumberfour"
        android:id="@+id/imageFour"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/newnumberfive"
        android:id="@+id/imageFive"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/newnumbersix"
        android:id="@+id/imageSix"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/newnumberseven"
        android:id="@+id/imageSeven"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/newnumbereight"
        android:id="@+id/imageEight"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/newnumbernine"
        android:id="@+id/imageNine"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/newnumberten"
        android:id="@+id/imageTen"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>
</RelativeLayout>
