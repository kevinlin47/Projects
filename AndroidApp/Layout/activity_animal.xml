<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_animal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffff00"
    tools:context="nivek.learnnumbersmore.AnimalActivity">

    <Button
        android:text=""
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:background="@drawable/doghead"
        android:id="@+id/dogButton"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/catButton"
        android:layout_toLeftOf="@+id/catButton" />

    <Button
        android:text=""
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:id="@+id/catButton"
        android:background="@drawable/cathead"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text=""
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/horsehead"
        android:id="@+id/horseButton"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cowButton"
        android:layout_toEndOf="@+id/cowButton" />

    <Button
        android:text=""
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:background="@drawable/cowhead"
        android:id="@+id/cowButton"
        android:layout_alignTop="@+id/horseButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <Button
        android:text=""
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:background="@drawable/pighead"
        android:id="@+id/pigButton"
        android:layout_below="@+id/horseButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text=""
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:background="@drawable/chickenhead"
        android:id="@+id/chickenButton"
        android:layout_below="@+id/horseButton"
        android:layout_toRightOf="@+id/pigButton"
        android:layout_toEndOf="@+id/pigButton" />
</RelativeLayout>
